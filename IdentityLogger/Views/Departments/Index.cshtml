@using Demo63Assignment.Models.ViewModel
@model List<DepartmentViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">
    <div class="row">
        <h5><a class="btn btn-success" asp-controller="Departments" asp-action="Create">Create Department</a></h5>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Id</td>
                        <td>@dept.Name</td>
                        <td>@dept.Description</td>
                    </tr>
                }
            </tbody>


        </table>

    </div>
</div>